*{margin:0;padding:0;}
html{padding:0 !important;padding:100px 0;width:100%;height:100%;overflow:hidden;}
body{padding:100px 0;padding:/**/0;height:100%;overflow: hidden;font-size:12px;color:#4c4948;background:#fff; font-family:Tahoma, Geneva, sans-serif;}
a img {border:none;}
img {vertical-align:text-bottom;}
h1 img, h2 img, h3 img, h4 img, h5 img, h6 img {margin:0;}
li ul, li ol {margin:0px;}
ul, ol {margin:0 0 0 1.5em;}
ul { list-style:none;}

.clearfix:after, .head:after {content:"\0020";display:block;height:0;clear:both;visibility:hidden;overflow:hidden;}
.clearfix, .head {display:block;}
.clear {clear:both;}
.clearing {clear: both; display: block; font-size:0px; display:none; overflow:hidden; line-height:0; height:0px}
body.fullwidth {min-width:960px;}


